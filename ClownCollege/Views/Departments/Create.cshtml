@{
  Layout = "_Layout";
}

@model ClownCollege.Models.Department

<h4>Add a new department</h4>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <br>
        <input type="submit" value="Add new department" />
      }
    </div>
  </div>
  <div class="col-md-8">
    <img src="/../../img/GacyClown.webp" width="500px" />
  </div>
</div>

<p>@Html.ActionLink("Show all departments", "Index")</p>